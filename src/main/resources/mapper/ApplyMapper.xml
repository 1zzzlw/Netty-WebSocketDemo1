<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzzlew.mapper.ApplyMapper">
    <insert id="add" parameterType="com.zzzlew.pojo.Apply">
        insert into apply(uid, tid)
        values (#{uid}, #{tid})
    </insert>

    <select id="queryList" resultType="com.zzzlew.pojo.User">
        select u.*
        from user u
                 join apply a on u.id = a.tid
        where a.uid = #{id}
    </select>


</mapper>

